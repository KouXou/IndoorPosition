<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
            android:text="Checkpoint"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/record_button"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="229dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="678dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.25"/>

    <ImageView
            android:src="@drawable/groundfloor"
            android:layout_width="377dp"
            android:layout_height="444dp"
            android:id="@+id/floorPlan"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/record_button"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_lock_idle_alarm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            android:id="@+id/start_session"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_delete"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            android:id="@+id/stop_session"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>